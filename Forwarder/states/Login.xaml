<Window x:Class="Forwarder.States.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login page" Height="114" Width="203" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None">
    <Grid>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="120,87,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="7,87,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="23" Margin="75,9,0,0" Text="admin" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBox" Password="admin" HorizontalAlignment="Left" Height="23" Margin="75,37,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login:" HorizontalAlignment="Left" Height="26" Margin="7,9,0,0" VerticalAlignment="Top" Width="63"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="23" Margin="7,37,0,0" VerticalAlignment="Top" Width="63"/>
        <TextBlock Margin="76,63,10,28">
            <Hyperlink NavigateUri="">Забыли пароль?</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
